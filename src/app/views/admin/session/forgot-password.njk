{% extends "admin/session/layout.njk" %}

{% block content %}
    <section class="login-form">
        <form method="POST" action="/forgot-password">
            <div class="header">
                <h3>Esqueceu a Senha?</h3>
            </div>

            <div class="fields">
                <div class="item user-email">
                    <div>E-mail</div>
                    <div class="input">
                        <input
                            type="email"
                            name="email"
                            placeholder="Digite seu e-mail para recuperar sua senha"
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <div class="forgot-footer button-footer-form">
                <button type="submit" class="button">Recuperar</button>
            </div>
        </form>
    </section>
  
    <script src="/scripts/validate.js"></script>
{% endblock %}