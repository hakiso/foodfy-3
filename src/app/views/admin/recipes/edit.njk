{% extends "admin/recipes/layout.njk" %}

{% block head %}
    <title>Foodfy - Editar receita</title>
{% endblock %}

{% block content %}
    <section class="recipe-page">
        <div class="recipe-page-header">
            <h2>Criando receita</h2>

            <div class="recipe-page-buttons-action">
                <div class="button-edit-delete">
                    <button type="submit" class="button-delete" form="form-delete">Deletar</button>
                </div>

                <div class="button-edit-save">
                    <button type="submit" form="post-save">Salvar receita</button>
                </div>
            </div>
        </div>

        <form id="form-delete" method="POST" action="/admin/recipes?_method=DELETE">
            <input type="hidden" name="id" value="{{ recipe.id }}">
        </form>

        <form method="POST" action="/admin/recipes?_method=PUT" enctype="multipart/form-data" id="post-save">
            <input type="hidden" name="id" value="{{ recipe.id }}">

            {% include "admin/recipes/fields.njk" %}
        </form>
    </section>

    <script src="/scripts/confirm-delete.js"></script>
{% endblock %}