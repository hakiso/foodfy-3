{% extends "layout-website.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
    <section>
        <article class="recipes">
            {% for recipe in recipes %}
                <div class="recipe">
                    <span class="recipe-id">{{recipe.id}}</span>
                    <img src="{{recipe.image}}" alt="Imagem do prato {{ recipe.title }}">
                    <p class="recipe-name">{{ recipe.title }}</p>
                    <p class="recipe-chef">por {{ recipe.chef_name }}</p>
                </div>
            {% endfor %}
        </article>

        <div class="pagination" data-page="{{pagination.page}}" data-total="{{pagination.total}}"></div>
    </section>

    <script src="/js/scripts.js"></script>
    <script src="/js/pagination.js"></script>
{% endblock %}