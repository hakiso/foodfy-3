{% extends "layout-website.njk" %}

{% block head %}
    <title>Foodfy - Receitas</title>
{% endblock %}

{% block content %}
    <section>
        <article class="recipes">
            {% for recipe in recipes %}
                <div class="recipe">
                    <img src="/img/recipes-small/{{recipe.image}}" alt="Imagem do prato {{ recipe.title }}">
                    <p class="recipe-name">{{ recipe.title }}</p>
                    <p class="recipe-chef">por {{ recipe.author }}</p>
                </div>
            {% endfor %}
        </article>
    </section>

    <script src="/js/scripts.js"></script>
{% endblock %}